{% extends 'base.html.twig' %}

{% block title %}Dashboard Member{% endblock %}

{% block link %}
<link rel="stylesheet" href="{{ asset('/css/sb-admin-2.min.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard_member.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboardPanel.css')}}">

<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<style>
    #wrapper #content-wrapper #content {
        position: relative;
    }
</style>
{% endblock %}

{% block body %}
<!-- Page Wrapper -->


            <!-- Begin Page Content -->
            <div class="container__top">
                <h2>DASHBOARD</h2>
            </div>
            <div class="container__body">
               <div class="container__body-cards">

                    <div class="container__body-card" id="aa">
                        <div class="container__body-card-top">
                            <h4>Partie</h4>
                            <p>{{nbParty.nbPlay}}</p>
                        </div>
                        <a href="#"></a>
                        <button><img src="{{ asset('/img/download.png')}}" alt=""></button>
                    </div>
                    <div class="container__body-card 2" id="bb">
                        <div class="container__body-card-top">
                            <h4>Jeux</h4>
                            <p>{{nbGame.nbGames}}</p>
                        </div>
                        <a href="#"></a>
                        <button><img src="{{ asset('/img/joystick.png')}}" alt=""></button>
                    </div>
                    <div class="container__body-card 3" id="cc">
                        <div class="container__body-card-top">
                            <h4>Argent</h4>
                            <p>{{money}}</p>
                        </div>
                        <a href="#"></a>
                        <button><img src="{{ asset('/img/euro.png')}}" alt=""></button>
                    </div>

                </div>
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-black">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    {% endblock %}

    {% block js %}{% endblock %}