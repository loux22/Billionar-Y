{% extends 'base.html.twig' %}

{% block title %}Dashboard Member{% endblock %}

{% block link %}
<link rel="stylesheet" href="{{ asset('/css/sb-admin-2.min.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard.css')}}">
<link rel="stylesheet" href="{{ asset('/css/dashboard_member.css')}}">

<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

    <style>
    #wrapper #content-wrapper #content {
        position: relative;
    }

    .popup {
        background: rgba(0, 0, 0, 0.6);
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0%;
        display: none;
        justify-content: center;
        align-items: flex-start;
    }

    .popup-content {
        height: 500px;
        width: 600px;
        background: white;
        padding: 20px;
        border-radius: 2px;
        position: relative;
        box-shadow: 6px 6px 29px -4px rgba(0, 0, 0, 0.75);
        text-align: center;
    }

    .popup-content input[type=text]  {
        margin: 5px auto;
        display: block;
        padding: 8px;
        height: 40px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

    textarea {
        resize: none;
        margin: 5px auto;
        display: block;
        padding: 8px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

    .close {
        position: absolute;
        top: 5px;
        right: 5px;
        cursor: pointer;
    }

    .addGame{

        text-align: center;
        font-family: 'Poppins', sans-serif;
        color: #FF3838;
    }

    .btn-add{
        width: 384px;
        height: 47px;
        font-size: large;
        color: white;
        background: rgba(255, 56, 56, 0.9);
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
        border-radius: 8px;
    }

    .search-js {
        margin: 5px auto;
        display: block;
        width: 50%;
        padding: 8px;
        height: 40px;
        width: 384px;
        background: #f8f8f8;
        border: 1px solid #ededed;
        box-sizing: border-box;
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, .25);
        border-radius: 6px;
    }

</style>
{% endblock %}

{% block body %}
            <!-- Begin Page Content -->
            <div class="container__top">
                <h2>Mes jeux</h2>
                <button class="button_top add-game-js" type="button"><a href="#" class="button_top-text">Ajouter un jeu</a></button>
            </div>
            <div class="container__body">
            {% for game in games %}
            <a href="{{ path('adminDashboardGame',{'id' : game.id}) }}">
            <div class="container__body-t">
                    <div class="container__body-t-t">
                        <h4>{{game.name}}</h4>
                    </div>
                    <div class="container__body-t-i">
                        <img src="{{ asset('/imgGame/')}}{{game.img}}" alt="">
                    </div>
                </div>
            </a>
            {% endfor %}
            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-black">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2019</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <div class="popup">
        <div class="popup-content">
            <img class="close" src="{{ asset('/img/close.png')}}" alt="">
            <h1 class="addGame">Ajouter un jeu</h1>

            <input type="text" placeholder="Nom du jeu">
            <input type="file" name="" id="">
            <textarea name="" id="" cols="20" rows="10" placeholder="description"></textarea>
            <button type="submit" class="btn-add">
                Ajouter
            </button>



        </div>
    </div>
    {% endblock %}

    {% block js %}
    <script>
        var addGame = document.querySelector('.add-game-js')
        addGame.addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'flex'
        })

        document.querySelector('.close').addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'none'
            document.querySelector('body').style.overflow = 'visible'
        })

        document.querySelector('.close').addEventListener('click', function () {
            document.querySelector('.popup').style.display = 'none'
            document.querySelector('body').style.overflow = 'visible'
        })
    </script>
    {% endblock %}