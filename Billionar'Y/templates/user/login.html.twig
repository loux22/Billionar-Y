{% extends 'base.html.twig' %}
{% block title %}login
{% endblock %}

{% block body %}
<h1>Connexion</h1>
	<form action="{{ path('login') }}" method="post">
		{% if error %}
			<div>{{ error.messageKey | trans(error.messageData, 'security') }}</div>
		{% endif %}
		<div>
			<input placeholder="Mail" required name="_username" type="text">
		</div>
		<div>
			<input placeholder="mot de passe" required name="_password" type="password">
		</div>
		<div>
			<button type="submit">connexion</button>
		</div>

        <input type="checkbox" checked="checked">
		<label class="container">Memoriser mon compte</label>
	</form>

    <a href="{{ path('register') }}">Creer un compte</a>

	<a href="{{ path('logout') }}">deconnexion</a>
{% endblock %}
